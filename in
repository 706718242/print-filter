var typedString = ''; // 存储键盘输入的字符串
var timeout = null; // 输入超时的计时器

document.addEventListener('keyup', function(event) {
  clearTimeout(timeout); // 清除之前的计时器

  var pressedKey = String.fromCharCode(event.keyCode); // 获取键盘按键对应的字符

  typedString += pressedKey; // 将输入字符添加到字符串中

  // 设置2秒超时计时器
  timeout = setTimeout(function() {
    typedString = ''; // 清空输入字符串
  }, 2000);

  if (typedString === 'hello') { // 输入了特定字符串 'hello'
    myFunction(); // 执行你的函数
  }
});

function myFunction() {
  console.log('特定字符串已输入！');
  // 在这里执行你的函数代码
}
